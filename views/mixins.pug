mixin blogStatusTable(blogWithLink)
  table.table.table-sm
    tr
      td=""
      for l in layout.activeLanguages
        td=l

    for openBlog in layout.listOfOpenBlog.slice(0).reverse()
      tr
        if (blogWithLink)
          td
            a(href=layout.htmlroot+'/blog/' + openBlog.name)=openBlog.name
        else
          td=openBlog.name
        for l in layout.activeLanguages
          td
            div.badge.osmbclabel-openblog=openBlog._countUneditedMarkdown[l]

    for editBlog in layout.editBlog.slice(0).reverse()
      tr
        if (blogWithLink)
          td
            a(href=layout.htmlroot+'/blog/' + editBlog.name)=editBlog.name
        else
          td=editBlog.name
        for l in layout.activeLanguages
          td
            if (editBlog["close" + l])
              div.badge.osmbclabel-closedblog
                i.fa.fa-check
            else if (editBlog["reviewComment" + l])
              div.badge.osmbclabel-reviewblog=(editBlog["reviewComment" + l].length - 1)
            else
              div.badge.osmbclabel-editblog=editBlog._countUneditedMarkdown[l]
              
