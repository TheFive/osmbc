mixin langChooser(langString)
  if (layout)
    - let l = 0
    - let label = "osmbcbadge-lang"
    if (langString === "lang2")
      - l = 1
      - label = "osmbcbadge-lang2"
    - let langNumber = parseInt(langString.substr(4,2))    
    if (langNumber > 2)
      - l = langNumber -1
      - label = "badge-secondary"
      

    li.dropdown.nav-item
      - lang_temp = (layout.user.getLang(l))?layout.user.getLang(l):"--"
      - label_temp = "language" + ((langNumber > 0 ) ? langNumber : "")
      a.nav-link.dropdown-toggle(id=label_temp, class=label, href='#', style="color:white", data-toggle='dropdown',aria-haspopup="true",aria-expanded="false")=lang_temp
      div.dropdown-menu(aria-labelledby=label_temp)
        if (langString !== "lang")
          a.dropdown-item(id=langString+"_none" onclick = "chooseLanguage('" + langString +"','none')" ) none
        each litem in layout.languages
          if layout.usedLanguages[litem]
            a.dropdown-item(id=langString+"_"+litem onclick = "chooseLanguage('" + langString +"','" + litem +"')")=litem 
          
