extends article



block markdownArea

  // Markdown Area All Column
  .row
    - console.log("lang array.")
    - console.dir(layout.user.langArray)
    for lang of layout.user.langArray
      if (lang)
        div.col
          div(style="min-width:400px;max-width:900px")
            +markdownWithPreview(lang)


  // Language Flags All Column
  .row
    i#languageFlagsShow.fa.fa-flag.fa-2x(
    onclick="$('#languageFlagsShow').hide();$('.row#languageFlags').removeClass('d-none');")

  .row#languageFlags.d-none
    - for (lang in languageFlags)
      img.flag(id=lang,
        src=languageFlags[lang],
        class="img-thumbnail" ,
        width = 40,
        data-toggle="tooltip" data-placement="bottom" title=lang
        onclick="javascript:myclick(this.id)"
        ondragstart = "ondragstartflag(event,this.id);")
    p.osmbc-help-text="Click to copy to clipboard, or use drag and drop."
