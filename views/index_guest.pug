extends layout

block additionalMenuRight  
  +langMenu(2)

block content
  .row
    .col
      h2.d-none.d-sm-block="Welcome to OSM BC"
      h2.d-block.d-sm-none="OSM BC"
      p.osmbc-help-text
        span="You are logged in as guest. Please refer to "
        a(href="https://www.weeklyosm.eu/this-news-should-be-in-weeklyosm")="How to use OSMBC guest mode"
        span=" to get more information."
      h2="Your Articles"
      table.table.table-sm
        for a in articles
          tr
            td=a.blog
            td
              p=a.categoryEN
              p
                a(href=layout.htmlroot+"/article/"+a.id)=a.displayTitle()
                if (a.categoryEN ==="--unpublished--")
                  p=a.unpublishReason
                  if a.unpublishReference
                    p=a.unpublishReference



    .col-md-4
      .row
        h3="Current Production Status"
        +blogStatusTable(false)
        row
          p
            | Click on any label to edit the articles or view the blog.
          p
            span.badge.osmbclabel-closedblog
              | total
            |  Blog is closed for a language

          p
            span.badge.osmbclabel-reviewblog
              | total
            |  Blog is undergoing review
          p
            span.badge.osmbclabel-editblog
              | total
            |  Blog is open for editing
          p
            span.badge.osmbclabel-openblog
              | total
            |  Blog is used for submissions




  div.footer
