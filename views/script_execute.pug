extends layout




block content

  h1="Choose your script to execute"

  row
    div
      table.table.table-responsive
        thead
        tbody
          if files.length === 0
            tr
              td="there are no scripts"
          tr
            each file in files
              tr
                td
                  a.btn.btn-secondary(href=layout.htmlroot + "/tool/scripts/execute/" + file)=configTable[file].name
                td
                  div.osmbc-help-text=configTable[file].help


          


  