extends layout

block content
  html
    head
        title LogIN
    body
      form(method = "POST", action = "/osmbc/login")
        div.form-group.row
            label.col-sm-1.col-form-label="username"
            input.form-control.col-sm-3(type = "text", name = "username" placeholder="Enter Username")
        div.form-group.row
            label.col-sm-1.col-form-label="password"
            input.form-control.col-sm-3(type = "password", name = "password" placeholder="Enter Password")
        button.btn.btn-primary(type="submit") Login
        
  div.footer

